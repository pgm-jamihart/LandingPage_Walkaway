            <img class="hero__media__image" src="/assets/img/hero_img.png" alt="">
            <div class="hero__media__call-to-action">
                <a class="hero__media__call-to-action--download primary-button" href="#" role="call to action">Download the app!</a>
                <a class="hero__media__call-to-action--learn-more secondary-button" href="#" role="call to action">Learn more!</a>
            </div> 
        </div>

        <aside class="hero__content">
            <div class="hero__content__container">
                <h2 class="hero__content__container__title">Reviews</h2>
                <div class="hero__content__container__more">
                    <a href="#">More reviews</a>
                    <img class="hero__content__container__more__chevron" src="/assets/img/chevron.png" alt="">
                </div>
            </div>
            
            <ul class="hero__content__list">
                {% for hero in hero_text %}
                <li class="hero__content__list-item">
                    <span>{{ hero.subtitle }}</span>
                    <div class="hero__content__list-item__text">
                        <p class="hero__content__list-item__text__title">{{ hero.title }}</p>
                        <p class="hero__content__list-item__text__regular">{{ hero.description }}</p>
                    </div>
                </li>
                {% endfor %}
            </ul>
        </aside>
    </section>

    <section class="colorLoop" aria-hidden="true">
        <div class="colorLoop__block shade1" aria-hidden="true"></div>
        <div class="colorLoop__block shade2" aria-hidden="true"></div>
        <div class="colorLoop__block shade3" aria-hidden="true"></div>
        <div class="colorLoop__block shade4" aria-hidden="true"></div>
        <div class="colorLoop__block shade5" aria-hidden="true"></div>
        <div class="colorLoop__block shade6" aria-hidden="true"></div>
        <div class="colorLoop__block shade7" aria-hidden="true"></div>
    </section>
    
</header>
